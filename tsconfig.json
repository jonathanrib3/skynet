{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "allowJs": true,

    "moduleResolution": "node",
    "baseUrl": "./src/",

    "typeRoots": [
      "./node_modules/@types",
      "src/@types"
    ],

    "paths": {
      "@modules/*": ["modules/*"],
      "@constants/*": ["constants/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"],
    },

    "esModuleInterop": true,

    "emitDecoratorMetadata": true,

    "experimentalDecorators": true
  }
}